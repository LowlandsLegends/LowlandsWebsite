{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@images/*": ["public/images/*"],
      "@components/*": ["src/app/components/*"],
      "@styles/*": ["src/app/styles/*"],
      "@lib/*": ["src/app/lib/*"],
      "@utils/*": ["src/app/utils/*"]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/app/components/ParticlesComponent.jsx"],
  "exclude": ["node_modules"]
}
